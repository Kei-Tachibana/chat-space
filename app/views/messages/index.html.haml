.side
    = render 'shared/side_bar'

.chat
    .chat-header
        .left-header
            .left-header__name
                = @group.name
            %ul.members
                %li.members__list Memeber :ã€€
                - @group.users.each do |user|
                    %li.members__list
                        = user.name
        .right-header
            = link_to 'Edit', edit_group_path(@group), class: "right-header__button"
    .message-list
        = render partial: 'message', collection: @messages

    .form
        = form_for [@group, @message], html: {class: 'message-form'} do |f|
            = f.text_field :body, class: 'form__message', placeholder: 'Type a Message!'
            .form__mask
                = f.label :image, class: 'form__mask__image' do
                    = fa_icon 'picture-o', class: 'icon'
                    = f.file_field :image, class: 'hidden'
                = f.submit "Send", class: "form__submit"

