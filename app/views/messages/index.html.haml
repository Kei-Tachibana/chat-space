.chat
    .side
        = render 'shared/side_bar'

    .main
        .header
            .header__group
                .header__group-name groupName
                = link_to 'Edit', '/groups/group_id/edit', class: "chat-main__header--group-edit-button"
            .header__members MEMBER:

        .body
            .messages
                = render partial: 'message', collection: @messages

        .form
            = form_for [@group, @messages] do |f|
                = f.text_field :body, class: 'form__message', placeholder: 'Type a Message!'
                .form__mask
                    = f.label :image, class: 'form__mask__image' do
                        = fa_icon 'picture-o', class: 'icon'
                        = f.file_field :image, class: 'hidden'
                = f.submit "Send", class: "form__submit"

